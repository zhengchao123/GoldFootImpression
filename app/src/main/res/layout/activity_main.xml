<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="click"
                type="com.gold.footimpression.ui.event.EventHandler"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <LinearLayout
                android:id="@+id/ll_left_lnavigator"
                android:layout_width="100dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_launcher"/>
            <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="100dp"
                    android:layout_marginTop="50dp"

                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical">
                <View
                        android:layout_width="0dp"
                        android:layout_height="10dp"/>
                <RadioButton
                        android:id="@+id/rb_1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="@string/tab_main"
                        android:checked="true"
                        android:drawablePadding="5dp"
                        android:textColor="@drawable/color_tab_select"
                        android:gravity="center_horizontal"
                        android:drawableTop="@drawable/bg_tab_main_select"/>
                <View
                        android:layout_width="0dp"
                        android:layout_height="10dp"/>
                <RadioButton
                        android:id="@+id/rb_2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="@string/tab_life"
                        android:drawablePadding="5dp"
                        android:textColor="@drawable/color_tab_select"
                        android:gravity="center_horizontal"
                        android:drawableTop="@drawable/bg_tab_main_select"/>
                <View
                        android:layout_width="0dp"
                        android:layout_height="10dp"/>
                <RadioButton
                        android:id="@+id/rb_3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="@string/tab_life"
                        android:drawablePadding="5dp"
                        android:textColor="@drawable/color_tab_select"
                        android:gravity="center_horizontal"
                        android:drawableTop="@drawable/bg_tab_main_select"/>
                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                <RadioButton
                        android:id="@+id/rb_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="@string/tab_mine"
                        android:drawablePadding="5dp"
                        android:gravity="center_horizontal"
                        android:textColor="@drawable/color_tab_select"
                        android:drawableTop="@drawable/bg_tab_main_select"/>

            </RadioGroup>
        </LinearLayout>
        <FrameLayout
                android:id="@+id/main_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/ll_left_lnavigator">

        </FrameLayout>
    </RelativeLayout>
</layout>